# Example Rancher environment configuration
# Copy to `rancher.env` and fill in values as needed.

# FQDN for external Rancher access
export RANCHER_URL="https://charon.butterflycluster.com"

# Rancher API bearer token
# Example format: token-xxxxx:yyyyyyyyyyyyyyyyyyyy
export RANCHER_BEARER_TOKEN="REPLACE_ME"

# SSL certificates on the host (used by Rancher container)
export CERT_DIR="/etc/ssl"
export CERT_FILE="/etc/ssl/butterflycluster_com.crt.pem"
export KEY_FILE="/etc/ssl/butterflycluster_com.key.pem"
export CA_FILE="/etc/ssl/butterflycluster_com.ca-bundle"
